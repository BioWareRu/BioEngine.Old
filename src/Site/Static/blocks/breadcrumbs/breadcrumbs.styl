.breadcrumbs__block
  padding 1.2rem 1.875rem
  color $fontColor
.breadcrumbs
  padding 0
  margin 0
  list-style none
.breadcrumbs__item
  display inline-block
  margin-right 0.25rem
  font-size 0.8rem
.breadcrumbs__link
  color $linkColor
  text-decoration none
  cursor pointer
  &:hover
    text-decoration underline
    color $linkColorHover
.breadcrumbs__item + .breadcrumbs__item:before
  content '/'
  display inline-block
  margin-right 0.25rem