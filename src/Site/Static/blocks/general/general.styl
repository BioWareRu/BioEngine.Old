html, body
  margin 0
  padding 0
  width 100%
  height auto
  min-height 100%

body
  font-family $fontFamily
  font-size 1em
  line-height 1.2
  position relative
  min-height 300px
  min-width 980px

.upper
  text-transform uppercase

.link-on-dark
  color $onDarkTextColor
  text-decoration underline
  &:hover
    color $accentColor

.h2, .h3
  font-weight bold
  line-height 1.4

.h2
  font-size 1.5em

.h3
  font-size 1.2em

a
  img
    border: 0