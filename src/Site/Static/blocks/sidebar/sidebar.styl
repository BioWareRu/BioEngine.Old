.sidebar__content-wrp
  margin-top 30px
  border-radius $sidebarRadius
  padding $sidebarInnerGap
  background-color $sidebarColor
  color $fontColor
.sidebar__image
  margin-top 30px
  img
    width 100%
.sidebar__poll
  margin-top 30px
.sidebar__poll-title
  font-size 1em
  line-height 1.4
  font-weight bold
  margin 0 0 20px
.sidebar__poll-fieldset
  border none
  margin-bottom 20px
  padding 0
  margin-left 0
.sidebar__poll-item
  font-size 0.9em
  line-height 1.35
  display block
  margin-bottom 5px
  padding-left 25px
  vertical-align top
  input
    margin-left -21px
    margin-right 4px
.sidebar__poll-submit
  font-weight bold
  text-shadow 0 -1px black
  color white
  padding 10px 20px
  background-color $sidebarButton
  border none
  cursor pointer
  transition all 300ms ease-out
  &:hover
    background-color $linkColorHover
  &:disabled
    background-color $sidebarButton
    cursor default
.sidebar__result-number
  float right
  font-weight bold
  margin-right -3.75rem
.sidebar__poll-result-item
  clearfix()
  margin 0.3rem 3.25rem 1rem 0
.sidebar__poll-bar
  display inline-block
  box-sizing border-box
  margin-right 3rem
  height 0.5rem
  background-color: $accentColor;
  background-image: repeating-linear-gradient(-45deg, transparent, transparent 5px, rgba($linkColor,.5) 5px, rgba($linkColor,.5) 10px);
  width 100%
