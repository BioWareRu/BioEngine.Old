@using System.Threading.Tasks
@using BioEngine.Common.Base
@using BioEngine.Site.Components.Url
@using BioEngine.Site.ViewComponents
@using BioEngine.Site.ViewModels
@model BioEngine.Site.ViewModels.Files.FileCatViewModel
@inject UrlManager UrlManager
@inject ParentEntityProvider ParentEntityProvider
@{
    ViewBag.Title = await Model.Title();
    Layout = "~/Views/_Main.cshtml";
    var parent = await ParentEntityProvider.GetModelParent(Model.FileCat);
}

<div class="article__block">
    @(await Component.InvokeAsync<BreadcrumbsViewComponent>(Model.BreadCrumbs))
    <article class="article">
        <header class="article__header">
            <div class="article__title-wrap">
                <h2 class="article__title">@Model.FileCat.Title</h2>
            </div>
            @Html.Partial("~/Views/Shared/ParentHeader.cshtml", new ParentHeaderViewModel(parent, x => UrlManager.Files.ParentFilesUrl((dynamic) x), x => UrlManager.ParentIconUrl((dynamic) x)))
        </header>

        <div class="files">
            @foreach (var child in Model.Children)
            {
                <h3>Подкатегории</h3>
                <div class="files__cat">
                    <ul class="files__list">
                        <li class="files__item">
                            <h2 class="files__title">
                                <a class="files__link" href="@await UrlManager.Files.CatPublicUrl(child.Cat)">@child.Cat.Title</a>
                            </h2>
                            <ul class="files__list">
                                @foreach (var article in child.LastEntities)
                                {
                                    <li class="files__item">
                                        <a class="files__link"
                                           href="@await UrlManager.Files.PublicUrl(article)">
                                            @article.Title
                                        </a><br>
                                        @Html.Raw(article.Announce)
                                    </li>
                                }
                            </ul>
                        </li>
                    </ul>
                </div>
            }

        </div>
        <div class="files">
            <ul class="files__list">
                @foreach (var file in Model.LastFiles)
                {
                    <li class="files__item">
                        <a class="files__link" href="@await UrlManager.Files.PublicUrl(file)">@Html.Raw(file.Title)</a>
                    </li>
                }
            </ul>
        </div>

    </article>
    @(await Component.InvokeAsync<PagerViewComponent>(new
      {
          pagerModel = new PagerModel(Model.CurrentPage, Model.TotalFiles, page => UrlManager.Files.CatPublicUrl(Model.FileCat, page), 20)
      }))
</div>