@using BioEngine.Routing
@model BioEngine.Common.Models.FileCat
<div class="files__cat">
    <ul class="files__list">
        <li class="files__item">
            <h2 class="files__title">
                <a class="files__link" href="@Url.Files().CatPublicUrl(Model)">@Html.Raw(Model.Title)</a>
            </h2>
            <ul class="files__list">
                @foreach (var file in Model.Items)
                {
                    <li class="files__item">
                        <a class="files__link"
                           href="@Url.Files().PublicUrl(file)">
                            @Html.Raw(file.Title)
                        </a><br>
                        @Html.Raw(file.Announce)
                    </li>
                }
                @foreach (var child in Model.Children)
                {
                    @await Html.PartialAsync("FileCatPartial", child)
                }
            </ul>
        </li>
    </ul>
</div>